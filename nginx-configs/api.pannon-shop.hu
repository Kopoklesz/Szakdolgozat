server {
    listen 443 ssl;
    server_name api.pannon-shop.hu;

    add_header X-Frame-Options "SAMEORIGIN" always;
    add_header X-Content-Type-Options "nosniff" always;

    location / {
        proxy_pass http://localhost:3001;
        proxy_http_version 1.1;
        proxy_set_header Upgrade $http_upgrade;
        proxy_set_header Connection 'upgrade';
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
        proxy_cache_bypass $http_upgrade;
    }

    access_log /var/log/nginx/api.pannon-shop.access.log;
    error_log /var/log/nginx/api.pannon-shop.error.log;

    ssl_certificate /etc/letsencrypt/live/pannon-shop.hu/fullchain.pem;
    ssl_certificate_key /etc/letsencrypt/live/pannon-shop.hu/privkey.pem;
    include /etc/letsencrypt/options-ssl-nginx.conf;
    ssl_dhparam /etc/letsencrypt/ssl-dhparams.pem;
}

server {
    listen 80;
    server_name api.pannon-shop.hu;

    # HTTP -> HTTPS redirect
    return 301 https://$host$request_uri;
}
